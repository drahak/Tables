{snippet datatable}
{!$control->getElementPrototype()->startTag()}

	<!-- Drahak\Table header -->
	<thead>
		<tr>
		{foreach $control->columns as $column}
			{!$column->label->startTag()}
				<a href="{link this!, order => $column->name, sort => !$control->sort}" n:class="$ajax ? 'datatable-ajax'">
					{$column->label->getText()}
				</a>
				<div class="order">
					<a href="{link this!, order => $column->name, sort => false}"
					   n:class="$ajax ? 'datatable-ajax order-asc' : 'order-asc'"><span>Ascending</span></a>
					<a href="{link this!, order => $column->name, sort => true}"
					   n:class="$ajax ? 'datatable-ajax order-desc' : 'order-desc'"><span>Descending</span></a>
				</div>
			{!$column->label->endTag()}
		{/foreach}
		</tr>
	</thead>

	<!-- Drahak\Tables body -->
	<tbody>
		<tr n:foreach="$control->rows as $row">
		{foreach $control->columns as $column}
			{!$column->cell->startTag()}
				{$column->parse(isset($row[$column->name]) ? $row[$column->name] : '', $row)}
			{!$column->cell->endTag()}
		{/foreach}
		</tr>
	</tbody>

	<!-- Drahak\Tables footer -->
	<tfoot n:if="$paginator">
		<tr>
			<td colspan="{count($control->columns)}">
				{if $paginator}
					<p>Zobrazeno <strong>{$rowsFrom} - {$rowsTo}</strong> z celkov√Ωch <strong>{$paginator->getItemCount()}</strong></p>
					{control paginator}
				{/if}
			</td>
		</tr>

	</tfoot>

{!$control->getElementPrototype()->endTag()}
{/snippet}